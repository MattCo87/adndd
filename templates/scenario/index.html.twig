{% extends 'base.html.twig' %}

{% block title %}Création de table
{% endblock %}

{% block edit %}{% endblock %}

{% block body %}
	<div class="overlay"></div>


	<div class="myform-container">
		<h1>NOUVELLE TABLE</h1>
		{{ form_start(scenarioform) }}
		{{ form_errors(scenarioform) }}

		<ul class="flex-outer">
			<li>
				{{ form_label(scenarioform.name, 'Nom de la table', {'label_attr': {'class': 'myform-label'}}) }}
				{{ form_widget(scenarioform.name, {'attr': {'class': 'myform-textinput'}}) }}
				{{ form_errors(scenarioform.name) }}
			</li>
			<li>
				{{ form_label(scenarioform.game, 'Jeu', {'label_attr': {'class': 'myform-label'}}) }}
				{{ form_widget(scenarioform.game, {'attr': {'class': 'myform-dropdown'}}) }}
				{{ form_errors(scenarioform.game) }}
			</li>
			<li>
				{{ form_label(scenarioform.start_at, 'Première session', {'label_attr': {'class': 'myform-label'}}) }}
				{{ form_widget(scenarioform.start_at, {'attr': {'class': 'myform-select'}}) }}
				{{ form_errors(scenarioform.start_at) }}
			</li>
			<li>
				{{ form_label(scenarioform.seats, 'Places', {'label_attr': {'class': 'myform-label'}}) }}
				{{ form_widget(scenarioform.seats) }}
				{{ form_errors(scenarioform.seats) }}
			</li>
			<li>
				{{ form_label(scenarioform.private, 'Visibilité', {'label_attr': {'class': 'myform-label'}}) }}
				{{ form_widget(scenarioform.private) }}
				{{ form_errors(scenarioform.private) }}
			</li>
			<li class="toRight">
				<button type="submit" class="app-button cta">Créer</button>
			</li>
			{{ form_end(scenarioform) }}
		</ul>
	</div>
{% endblock %}
