{% extends 'base.html.twig' %}

{% block title %}Jouer
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('assets/js/customselect.js') }}" defer></script>
{% endblock %}

{% block edit %}{% endblock %}

{% block body %}

	<div class="overlay"></div>

	<div class="playWrapper">

		<div class="myform-container">
			<div class="flextitle">
				<h2>AFFICHER LES TABLES JOUANT À</h2>
			</div>
			{{ form_start(playform) }}

			<ul class="flex-outer">

				<li>
					{{ form_label(playform.game, 'Jeu', {'label_attr': {'class': 'myform-label hidelabel'}}) }}
					<div class="custom-select" style="width:500px;">
						{{ form_widget(playform.game, {'attr': {'class': 'myform-dropdown'}}) }}
					</div>
				</li>
				<li>
					{{ form_widget(playform.statuswait, {'attr': {'class': 'myform-checkbox'}}) }}
					{{ form_label(playform.statuswait, 'En attente de joueurs', {'label_attr': {'class': 'myform-label'}}) }}
				</li>
				<li>
					{{ form_widget(playform.statusrunning, {'attr': {'class': 'myform-checkbox'}}) }}
					{{ form_label(playform.statusrunning, 'En cours', {'label_attr': {'class': 'myform-label'}}) }}
				</li>
				<li>
					{{ form_widget(playform.statusclosed, {'attr': {'class': 'myform-checkbox'}}) }}
					{{ form_label(playform.statusclosed, 'Parties terminées', {'label_attr': {'class': 'myform-label'}}) }}
				</li>
			</ul>
			{{ form_end(playform) }}
		</div>

		<div class="flextitle">
			<button type="button" class="app-button cta">OU CRÉER UNE TABLE</button>
		</div>

		<div class="scenarioList">
			{% for scenario in scenarios %}
				<div class="scenarioCard">

					<div class="scenarioHeader">
						<div class="thumb">
							<img src="{{ asset('assets/images/homepage/cover_add.png') }}"/>
						</div>
						<div class="infos">
							<div class="game">Advanced donjons & dragons</div>
							<div class="title">{{scenario.name}}</div>
						</div>

					</div>

					<div class="scenarioDetails">
						<ul>
							<li>
								<p class="fieldName">MJ</p>
								<p class="fieldValue">a faire</p>
							</li>
							<li>
								<p class="fieldName">Nb joueurs</p>
								<p class="fieldValue">liaison caractere
							</p>
							</li>
							<li>
								<p class="fieldName">Statut</p>
								<p class="fieldValue">{{scenario.status}}</p>
							</li>
						</ul>
					</div>

					<div class="scenarioFooter">
						<h1>
							<a href="{{ path('games') }}" role="button">
								Rejoindre
							</a>
						</h1>
					</div>
				</div>
			{% endfor %}

			<div class="scenarioCard">

				<div class="scenarioHeader">
					<div class="thumb">
						<img src="{{ asset('assets/images/homepage/cover_add.png') }}"/>
					</div>
					<div class="infos">
						<div class="game">Advanced donjons & dragons</div>
						<div class="title">La lame sacrée</div>
					</div>

				</div>

				<div class="scenarioDetails">
					<ul>
						<li>
							<p class="fieldName">MJ</p>
							<p class="fieldValue">Dylan-du-Plessis</p>
						</li>
						<li>
							<p class="fieldName">Nb joueurs</p>
							<p class="fieldValue">2 (3 disponibles)</p>
						</li>
						<li>
							<p class="fieldName">Statut</p>
							<p class="fieldValue">en attente</p>
						</li>
					</ul>
				</div>

				<div class="scenarioFooter">
					<h1>
						<a href="{{ path('games') }}" role="button">
							Rejoindre
						</a>
					</h1>
				</div>
			</div>

			


		</div>


	</div>
{% endblock %}
