{% extends 'base.html.twig' %}

{% block title %}Ajouter une règle de jeu
{% endblock %}

{% block edit %}edit
{% endblock %}

{% block mainshadow %}noshadow{% endblock %}

{% block body %}
	<div class="overlay"></div>

	<div class="myform-container editForm">
		<div class="flextitle editTitle">
			<h1>Ajouter une règle de jeu</h1>
		</div>
		{{ form_start(addGameRulesForm) }}

		<ul class="flex-outer">
			<li	class="revert">
				<div>
					{{ form_label(addGameRulesForm.game, 'Jeu', {'label_attr': {'class': 'myform-label'}}) }}
					{{ form_widget(addGameRulesForm.game, {'attr': {'class': 'myform-dropdown fixSelect'}}) }}
				</div>
			</li>
			<li class="revert">
				{{ form_row(addGameRulesForm.name) }}
			</li>
			<li class="revert">
				{{ form_row(addGameRulesForm.path) }}
			</li>
			<li class="btnPos">
				{{ form_widget(addGameRulesForm.submit, {'label': 'Ajouter', 'attr': {'class': 'app-button cta editButton'}}) }}
			</li>
		</ul>
		{{ form_end(addGameRulesForm) }}
	</div>

{% endblock %}
